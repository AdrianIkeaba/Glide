<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Other theme attributes -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Change the color of the filled box -->
        <item name="colorPrimary">#1E66C2</item>

        <!-- Change the color of the filled box when focused -->
        <item name="colorPrimaryDark">#1E66C2</item>

        <!-- Change the color of the text -->
        <item name="textInputStyle">@style/CustomTextInputStyle</item>
    </style>

    <!-- Custom style for the TextInputLayout text color -->
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="Theme.App" parent="Theme.AppCompat">
        ...
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/lightBlue</item>
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/pBlue</item>
        <item name="colorOnPrimary">@color/lightBlue</item>
    </style>
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/pBlue</item>
    </style>


</resources>